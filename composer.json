{
    "name": "novuso/view",
    "description": "View component for the Novuso Framework",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=5.4.0",
        "phing/phing": "2.8.*"
    },
    "require-dev": {
        "satooshi/php-coveralls": "dev-master",
        "mikey179/vfsStream": "1.2.*",
        "mockery/mockery": "0.9.*",
        "mustache/mustache": "2.6.*",
        "pdepend/pdepend": "2.0.*",
        "phploc/phploc": "2.0.*",
        "phpmd/phpmd": "2.0.*",
        "phpunit/phpunit": "4.1.*",
        "sebastian/phpcpd": "2.0.*",
        "squizlabs/php_codesniffer": "1.5.*",
        "twig/twig": "1.16.*"
    },
    "suggest": {
        "mustache/mustache": "To use the mustache template engine adapter",
        "twig/twig": "To use the twig template engine adapter"
    },
    "autoload": {
        "psr-4": {
            "Novuso\\Component\\View\\": "src",
            "Novuso\\Test\\Integration\\View\\": "tests/integration",
            "Novuso\\Test\\Unit\\View\\": "tests/unit"
        }
    },
    "minimum-stability": "stable"
}
